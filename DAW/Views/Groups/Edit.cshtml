@model DAW.Models.Group

<div class="group-form">
    <form asp-action="Edit" asp-controller="Groups" method="post">
        <div class="form-group">
            <label>Name</label>
            <input name="Name" class="form-control" value="@Model.Name" placeholder="Group name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Description</label>
            <input name="Description" class="form-control" value="@Model.Description" placeholder="Group description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <laebl>Label</laebl>
            <input name="Label" class="form-control" value="@Model.Label" placeholder="Group label">
        </div>
        <button class="btn btn-success" type="submit">Confirm</button>
    </form>
</div>